//Tum soruların cevabı metod ile yazılmalıdır...
//Soru 1: Dairenin alanını hesaplayan metodu yazınız? (pi*r*r)
//Soru 2: Silindirin hacmini hesaplayan metodu yazınız? (pi*r*r*h)
//Soru 3:bir sayının tek mi cift mi olduğunu bulan metodu yazınız?
//Soru 4: Bir sayının karesini alan metodu yazınız?
//Soru 5: Girilen sayıyı(10 lu duzende) ikili sayı sistemine ceviren metodu yazınız?

double DaireAlaniHesapla(double r)
{
    return Math.PI * r * r;
}


Console.WriteLine("r giriniz");
double yaricap = double.Parse(Console.ReadLine());
Console.WriteLine(DaireAlaniHesapla(yaricap));

double SilindirHacimHesapla(double r, double h)
{ 
    //return Math.PI * r * r * h;
    return DaireAlaniHesapla(r) * h;
}

Console.WriteLine(SilindirHacimHesapla(3,10));

bool SayiTekmi(int sayi)
{
    //return sayi % 2==1;
    //return sayi % 2 ==0 ? true : false;

    bool kontrol=false; 
    if(sayi % 2==1)
        kontrol=true;
    return kontrol;
}

Console.WriteLine(SayiTekmi(11));
Console.WriteLine(SayiTekmi(14));

string SayiTekMiCiftMi(int sayi)
{
    return sayi % 2 == 0 ? "cift" : "tek";
}

Console.WriteLine(SayiTekMiCiftMi(11));
Console.WriteLine(SayiTekMiCiftMi(56));

int KareAl(int sayi)
{
    return sayi * sayi;
}

Console.WriteLine(KareAl(3));

string İkiliSayiyaCevir(int sayi)
{
    string binary = "";
    while (sayi > 0)
    {
        binary = (sayi % 2).ToString() + binary;
        sayi = sayi / 2;

        //Console.WriteLine(sayi + " " + binary);
    }
    return binary;
}
Console.WriteLine("--------");
Console.WriteLine(İkiliSayiyaCevir(10));
Console.WriteLine("--------");
Console.WriteLine(İkiliSayiyaCevir(7));

Console.WriteLine("--------");
Console.WriteLine(İkiliSayiyaCevir(78963));

