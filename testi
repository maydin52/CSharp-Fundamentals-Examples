// Nasrettin Hoca Testi hikayesi

int sayi1 = 0;
int sayi2 = 0;
int sonuc = 0;
int carpim = 0;

do
{

  Console.WriteLine("Sayı 1 giriniz");
  sayi1 = int.Parse(Console.ReadLine());

  Console.WriteLine("Sayı 2 giriniz");
  sayi2 = int.Parse(Console.ReadLine());

  sonuc = sayi1 * sayi2;

  Console.WriteLine($" sayi1 x sayi2 ?");

  carpim = int.Parse(Console.ReadLine());

  
  if(carpim != sonuc)
  {
    Console.Clear();
    Console.WriteLine("Tekrar denemek için yönlendiriliyorsunuz");
  }
}
while(sonuc != carpim);


Console.WriteLine("Sayıyı buldunuz");
